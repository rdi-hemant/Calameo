<?xml version="1.0"?>
<root xmlns="http://skin.calameo.com/2.0" backgroundColor="0x454545">
	
	<!-- Media -->
    <media name="canvasLib" source="rdi_canvas.png"/>
	
	<!-- Viewer -->
